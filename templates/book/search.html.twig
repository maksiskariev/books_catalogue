{% extends 'base.html.twig' %}

{% block title %}Search results for {{ searchText }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
    </style>

    <div class="example-wrapper">
        <h2><a href="{{ path('app_book_list') }}">Back to all books</a></h2>
        <h1>Search results for: {{ searchText }}</h1>

        {% if books %}
        <ul>
            {% for book in books %}
                <li><a href="{{ path('app_book_detail', { id: book.id }) }}">{{ book.title }}</a></li>
            {% endfor %}

            {{ knp_pagination_render(books) }}

            {% else %}
                <h1>No books found</h1>
            {% endif %}

    </div>
{% endblock %}
